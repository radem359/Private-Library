@model PrivateLibrary.Models.AUTHOR

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm("UpdateInBase", "Authors"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AUTHOR @Model.NAMEOFATUTHOR</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDOFAUTHOR)

        <<div class="form-group">
         @Html.LabelFor(model => model.NAMEOFATUTHOR, "Name of Author", htmlAttributes: new { @class = "control-label col-md-2" })
         <div class="col-md-10">
               @Html.EditorFor(model => model.NAMEOFATUTHOR, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.NAMEOFATUTHOR, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDOFNATIONALITY, "NATIONALITY", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("NATIONALITY", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "TableOfBooks")
</div>
